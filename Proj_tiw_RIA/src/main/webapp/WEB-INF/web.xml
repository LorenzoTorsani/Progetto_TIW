<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>Aste online</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://127.0.0.1:3306/progetto_tiw?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>outputpath</param-name>
		<param-value>/Users/simonezacchetti/git/Progetto_TIW/Proj_tiw_RIA/src/main/webapp/resources/static/images/</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>macchinaz</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.tiw.project.filters.LoginChecker</filter-class>
	</filter>
	<filter>
		<filter-name>NoCacher</filter-name>
		<filter-class>it.polimi.tiw.project.filters.NoCacher</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>NoCacher</filter-name>
		<url-pattern>/Home.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/Vendo</url-pattern>
		<url-pattern>/Acquisto</url-pattern>
		<url-pattern>/CreateExpensesReport</url-pattern>
		<url-pattern>/CreateMission</url-pattern>
		<url-pattern>/GetMissionDetailsData</url-pattern>
		<url-pattern>/GetMissionsData</url-pattern>
		<url-pattern>/Logout</url-pattern>
		<url-pattern>/Home.html</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>